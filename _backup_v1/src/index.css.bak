@import "tailwindcss";

/* ========================================
   VitaFINANCE-pro Design System
   ======================================== */

:root {
    /* Primary Colors */
    --color-primary: #1e293b;
    /* Slate 800 - Sidebar BG (Modern Neutral) */
    --color-primary-light: #334155;
    /* Slate 700 */
    --color-accent: #5dc0bb;
    /* Original Teal - Buttons/Active */
    --color-accent-light: #7dd3fc;
    /* Sky 300 - Highlights */

    /* Status Colors */
    --color-pagado: #10b981;
    --color-abono: #f59e0b;

    /* Neutral Colors */
    --color-bg: #f8fafc;
    --color-bg-card: #ffffff;
    --color-text: #1e293b;
    --color-text-muted: #64748b;
    --color-border: #e2e8f0;

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);

    /* Spacing */
    --sidebar-width: 240px;
    --header-height: 64px;

    /* Border Radius */
    --radius-sm: 6px;
    --radius-md: 10px;
    --radius-lg: 16px;
    --radius-full: 9999px;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.5;
}

/* ========================================
   App Layout
   ======================================== */

.app-layout {
    display: flex;
    min-height: 100vh;
}

.main-content {
    flex: 1;
    margin-left: var(--sidebar-width);
    padding: 32px 40px;
    background-color: var(--color-bg);
    overflow-y: auto;
}

/* ========================================
   Sidebar
   ======================================== */

.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background-color: var(--color-primary);
    display: flex;
    flex-direction: column;
    padding: 24px 16px;
    z-index: 100;
}

.sidebar-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 12px;
    margin-bottom: 32px;
}

.logo-icon {
    width: 40px;
    height: 40px;
    background: var(--color-accent);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.logo-text {
    display: flex;
    flex-direction: column;
}

.logo-title {
    color: white;
    font-weight: 700;
    font-size: 16px;
    letter-spacing: -0.5px;
}

.logo-subtitle {
    color: rgba(255, 255, 255, 0.6);
    font-size: 9px;
    letter-spacing: 1px;
    text-transform: uppercase;
}

.sidebar-nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    border-radius: var(--radius-md);
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
}

.nav-item:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
}

.nav-item-active {
    background: var(--color-accent) !important;
    color: white !important;
}

.sidebar-user {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 12px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: auto;
}

.user-avatar {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-info {
    display: flex;
    flex-direction: column;
}

.user-name {
    color: white;
    font-weight: 600;
    font-size: 14px;
}

.user-role {
    color: var(--color-accent);
    font-size: 11px;
    font-weight: 500;
}

/* ========================================
   Page Header
   ======================================== */

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
}

.header-left {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.page-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 8px;
}

.title-emoji {
    font-size: 24px;
}

.page-subtitle {
    color: var(--color-text-muted);
    font-size: 14px;
}

.header-actions {
    display: flex;
    gap: 12px;
}

/* ========================================
   Buttons
   ======================================== */

.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: var(--radius-md);
    font-size: 14px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-primary {
    background: var(--color-accent);
    color: white;
}

.btn-primary:hover {
    background: var(--color-accent-light);
}

.btn-secondary {
    background: white;
    color: #ef4444;
    border: 1px solid #fecaca;
}

.btn-secondary:hover {
    background: #fef2f2;
}

/* ========================================
   Summary Cards
   ======================================== */

.summary-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 24px;
}

.summary-card {
    padding: 20px 24px;
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    gap: 8px;
    position: relative;
    overflow: hidden;
}

.summary-card::after {
    content: '';
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    opacity: 0.3;
}

.summary-card-efectivo {
    background: linear-gradient(135deg, #1a4d4d 0%, #2d6a6a 100%);
    color: white;
}

.summary-card-efectivo::after {
    background: rgba(255, 255, 255, 0.2);
}

.summary-card-transferencias {
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border: 1px solid #bbf7d0;
}

.summary-card-payphone {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: 1px solid var(--color-border);
}

.summary-title {
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.8;
}

.summary-card-efectivo .summary-title {
    color: rgba(255, 255, 255, 0.8);
}

.summary-card-transferencias .summary-title,
.summary-card-payphone .summary-title {
    color: var(--color-text-muted);
}

.summary-amount {
    font-size: 32px;
    font-weight: 700;
    letter-spacing: -1px;
}

.summary-card-transferencias .summary-amount,
.summary-card-payphone .summary-amount {
    color: var(--color-text);
}

.summary-subtitle {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
}

.summary-card-efectivo .summary-subtitle {
    color: var(--color-accent-light);
}

.summary-card-transferencias .summary-subtitle {
    color: var(--color-accent);
}

.summary-card-payphone .summary-subtitle {
    color: var(--color-text-muted);
}

/* ========================================
   Filters Bar
   ======================================== */

.filters-bar {
    display: flex;
    gap: 12px;
    margin-bottom: 24px;
    flex-wrap: wrap;
}

.search-input {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 16px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    flex: 1;
    min-width: 280px;
}

.search-input input {
    border: none;
    outline: none;
    flex: 1;
    font-size: 14px;
    color: var(--color-text);
}

.search-input input::placeholder {
    color: var(--color-text-muted);
}

.search-input svg {
    color: var(--color-text-muted);
}

.filter-select,
.filter-date {
    padding: 10px 16px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 14px;
    color: var(--color-text);
    cursor: pointer;
    min-width: 160px;
}

.filter-select:focus,
.filter-date:focus {
    outline: none;
    border-color: var(--color-accent);
}

/* ========================================
   Transactions
   ======================================== */

.transactions-section {
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
}

.transactions-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    border-bottom: 1px solid var(--color-border);
}

.transactions-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
}

.transactions-updated {
    font-size: 13px;
    color: var(--color-accent);
}

.transactions-list {
    display: flex;
    flex-direction: column;
}

.transaction-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px 24px;
    border-bottom: 1px solid var(--color-border);
    transition: background 0.2s ease;
}

.transaction-item:last-child {
    border-bottom: none;
}

.transaction-item:hover {
    background: #f8fafc;
}

.transaction-avatar {
    width: 44px;
    height: 44px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    flex-shrink: 0;
}

.transaction-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
}

.transaction-header {
    display: flex;
    align-items: center;
    gap: 12px;
}

.transaction-name {
    font-weight: 600;
    font-size: 15px;
    color: var(--color-text);
}

.transaction-code {
    font-size: 12px;
    color: var(--color-accent);
    background: #ecfdf5;
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-weight: 500;
}

.transaction-treatment {
    font-size: 13px;
    color: var(--color-text-muted);
}

.transaction-amount-section,
.transaction-status-section {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    min-width: 80px;
}

.transaction-amount-label,
.transaction-status-label {
    font-size: 10px;
    color: var(--color-text-muted);
    font-weight: 500;
    letter-spacing: 0.5px;
}

.transaction-amount {
    font-size: 16px;
    font-weight: 700;
    color: var(--color-accent);
}

.transaction-status {
    padding: 4px 10px;
    border-radius: var(--radius-sm);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
}

.status-pagado {
    background: #ecfdf5;
    color: var(--color-pagado);
}

.status-abono {
    background: #fef3c7;
    color: var(--color-abono);
}

.transaction-action {
    width: 36px;
    height: 36px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text-muted);
    transition: all 0.2s ease;
}

.transaction-action:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
}

/* ========================================
   Pagination
   ======================================== */

.pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    margin-top: 16px;
}

.pagination-info {
    font-size: 14px;
    color: var(--color-text-muted);
}

.pagination-info strong {
    color: var(--color-text);
}

.pagination-controls {
    display: flex;
    gap: 8px;
}

.pagination-btn {
    width: 36px;
    height: 36px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: var(--color-text-muted);
    transition: all 0.2s ease;
}

.pagination-btn:hover:not(:disabled) {
    border-color: var(--color-accent);
    color: var(--color-accent);
}

.pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* ========================================
   Caja Diaria Detailed Table
   ======================================== */

.detailed-table-container {
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow-x: auto;
    box-shadow: var(--shadow-sm);
    margin-bottom: 32px;
}

.detailed-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 13px;
    min-width: 1400px;
}

.detailed-table th {
    background: #f8fafc;
    color: #94a3b8;
    font-weight: 700;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    padding: 16px 12px;
    border-bottom: 1px solid var(--color-border);
    text-align: left;
    white-space: nowrap;
}

.detailed-table td {
    padding: 16px 12px;
    border-bottom: 1px solid #f1f5f9;
    vertical-align: middle;
    color: var(--color-text);
}

.detailed-table tr:hover td {
    background-color: #f8fafc;
}

/* Specific Columns */
.days-counter {
    display: flex;
    justify-content: center;
}

.days-circle {
    width: 36px;
    height: 36px;
    background: #eff6ff;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #3b82f6;
    border: 1px solid #dbeafe;
}

.days-number {
    font-weight: 700;
    font-size: 12px;
    line-height: 1;
}

.days-label {
    font-size: 7px;
    font-weight: 600;
    text-transform: uppercase;
}

.payment-code-badge {
    background: #f0fdf4;
    color: #5dc0bb;
    padding: 4px 8px;
    border-radius: 4px;
    font-family: monospace;
    font-weight: 600;
    font-size: 11px;
    white-space: nowrap;
}

.method-badge {
    background: #f1f5f9;
    color: #64748b;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    border: 1px solid #e2e8f0;
    white-space: nowrap;
}

.status-pill {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    display: inline-block;
}

.status-cancelado {
    background: #dcfce7;
    color: #166534;
}

.status-abono {
    background: #ffedd5;
    color: #c2410c;
}

.amount-ingreso {
    font-weight: 700;
    color: var(--color-text);
}

.amount-egreso {
    font-weight: 700;
    color: #ef4444;
}

.balance-cell {
    text-align: right;
    font-weight: 700;
    color: #f59e0b;
}

.balance-cell.has-balance {
    color: #f59e0b;
}

.balance-cell:not(.has-balance) {
    color: #cbd5e1;
}

.doctor-cell-sm {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
    font-size: 12px;
}

/* Controls Header */
.table-controls {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
}

.search-bar {
    display: flex;
    align-items: center;
    background: white;
    border: 1px solid var(--color-border);
    padding: 8px 16px;
    border-radius: var(--radius-md);
    width: 300px;
    gap: 8px;
    color: var(--color-text-muted);
}

.search-bar input {
    border: none;
    outline: none;
    width: 100%;
    color: var(--color-text);
    font-size: 14px;
}

.filters-group {
    display: flex;
    gap: 12px;
}

.filter-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: white;
    border: 1px solid var(--color-border);
    padding: 8px 16px;
    border-radius: var(--radius-md);
    font-size: 13px;
    font-weight: 500;
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.2s;
}

.filter-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
}

/* Stats Grid
   ======================================== */

.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 32px;
}

.stat-card {
    background: white;
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 16px;
    position: relative;
}

.stat-card-accent {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    color: white;
    border: none;
}

.stat-card-accent .stat-icon {
    background: rgba(255, 255, 255, 0.2) !important;
    color: white !important;
}

.stat-card-accent .stat-value,
.stat-card-accent .stat-label {
    color: white;
}

.stat-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.stat-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.stat-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--color-text);
}

.stat-label {
    font-size: 13px;
    color: var(--color-text-muted);
}

.stat-trend {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    font-weight: 600;
}

.stat-trend.up {
    color: #10b981;
}

.stat-trend.down {
    color: #ef4444;
}

/* ========================================
   Dashboard Grid
   ======================================== */

.dashboard-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
}

.dashboard-card {
    background: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
}

.section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 20px;
}

.section-title svg {
    color: var(--color-accent);
}

/* ========================================
   Goals List
   ======================================== */

.goals-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.goal-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.goal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goal-title {
    font-weight: 500;
    color: var(--color-text);
}

.goal-progress {
    font-weight: 600;
    color: var(--color-accent);
}

.goal-bar {
    height: 8px;
    background: #e2e8f0;
    border-radius: 4px;
    overflow: hidden;
}

.goal-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: 4px;
    transition: width 0.3s ease;
}

.goal-values {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: var(--color-text-muted);
}

.goal-target {
    color: var(--color-text-muted);
}

/* ========================================
   Treatments List
   ======================================== */

.treatments-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.treatment-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #f8fafc;
    border-radius: var(--radius-md);
}

.treatment-rank {
    width: 28px;
    height: 28px;
    background: var(--color-accent);
    color: white;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 13px;
}

.treatment-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.treatment-name {
    font-weight: 500;
    color: var(--color-text);
}

.treatment-count {
    font-size: 12px;
    color: var(--color-text-muted);
}

.treatment-revenue {
    text-align: right;
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.treatment-amount {
    font-weight: 600;
    color: var(--color-text);
}

.treatment-trend {
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 2px;
}

.treatment-trend.up {
    color: #10b981;
}

.treatment-trend.down {
    color: #ef4444;
}

.treatment-trend.stable {
    color: var(--color-text-muted);
}

/* ========================================
   Data Tables
   ======================================== */

.data-table-section {
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
    margin-bottom: 24px;
}

.table-header {
    padding: 20px 24px;
    border-bottom: 1px solid var(--color-border);
}

.data-table {
    overflow-x: auto;
}

.data-table table {
    width: 100%;
    border-collapse: collapse;
}

.data-table th,
.data-table td {
    padding: 16px 20px;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
}

.data-table th {
    background: #f8fafc;
    font-size: 12px;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.data-table tr:last-child td {
    border-bottom: none;
}

.data-table tr:hover td {
    background: #f8fafc;
}

.doctor-cell,
.patient-cell {
    display: flex;
    align-items: center;
    gap: 12px;
}

.doctor-avatar,
.patient-avatar {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
}

.doctor-avatar-lg,
.patient-avatar-lg {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
}

.doctor-info,
.patient-info {
    display: flex;
    flex-direction: column;
}

.doctor-name,
.patient-name {
    font-weight: 600;
    color: var(--color-text);
}

.doctor-role {
    font-size: 12px;
    color: var(--color-text-muted);
}

.amount-cell {
    font-weight: 600;
    color: var(--color-accent);
    display: flex;
    align-items: center;
    gap: 4px;
}

.rate-cell {
    font-weight: 600;
    color: var(--color-text);
}

.rank-badge {
    width: 28px;
    height: 28px;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 13px;
}

.rank-1 {
    background: #fef3c7;
    color: #d97706;
}

.rank-2 {
    background: #e2e8f0;
    color: #64748b;
}

.rank-3 {
    background: #fed7aa;
    color: #c2410c;
}

.cancellation-badge {
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    font-size: 12px;
    font-weight: 600;
}

.cancellation-badge.low {
    background: #ecfdf5;
    color: #10b981;
}

.cancellation-badge.high {
    background: #fef2f2;
    color: #ef4444;
}

.efficiency-bar {
    width: 100px;
    height: 8px;
    background: #e2e8f0;
    border-radius: 4px;
    overflow: hidden;
}

.efficiency-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: 4px;
}

.contact-cell {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--color-text-muted);
}

.pending-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: #fef2f2;
    color: #ef4444;
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: 600;
}

.paid-badge {
    display: inline-flex;
    padding: 4px 10px;
    background: #ecfdf5;
    color: #10b981;
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: 600;
}

.action-btn {
    padding: 8px 16px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: 500;
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.2s ease;
}

.action-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
}

/* ========================================
   Goals Page
   ======================================== */

.goals-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 24px;
}

.goal-card {
    background: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
}

.goal-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.goal-icon {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.goal-status {
    padding: 4px 12px;
    border-radius: var(--radius-full);
    font-size: 12px;
    font-weight: 600;
}

.goal-status.on-track {
    background: #ecfdf5;
    color: #10b981;
}

.goal-status.behind {
    background: #fef3c7;
    color: #f59e0b;
}

.goal-card-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 4px;
}

.goal-period {
    font-size: 13px;
    color: var(--color-text-muted);
}

.goal-progress-section {
    margin-top: 20px;
}

.goal-progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.goal-current {
    font-size: 24px;
    font-weight: 700;
    color: var(--color-text);
}

.goal-percentage {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-accent);
}

.goal-progress-bar {
    height: 10px;
    background: #e2e8f0;
    border-radius: 5px;
    overflow: hidden;
    margin-bottom: 8px;
}

.goal-progress-fill {
    height: 100%;
    border-radius: 5px;
    transition: width 0.3s ease;
}

.goal-progress-fill.on-track {
    background: var(--color-accent);
}

.goal-progress-fill.behind {
    background: #f59e0b;
}

.goal-target-text {
    font-size: 13px;
    color: var(--color-text-muted);
}

.tips-card {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    padding: 24px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    gap: 20px;
    color: white;
}

.tips-icon {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
}

.tips-content h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 4px;
}

.tips-content p {
    font-size: 14px;
    opacity: 0.9;
}

/* ========================================
   Settings Page
   ======================================== */

.settings-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 24px;
}

.settings-card {
    background: white;
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 16px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.settings-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
}

.settings-card-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.settings-card-content {
    flex: 1;
}

.settings-card-title {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 2px;
}

.settings-card-description {
    font-size: 13px;
    color: var(--color-text-muted);
}

.settings-status {
    font-size: 12px;
    font-weight: 500;
}

.settings-status.configured {
    color: #10b981;
}

.settings-status.pending {
    color: var(--color-text-muted);
}

.info-card {
    background: #f0f9ff;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid #bae6fd;
}

.info-card h3 {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 8px;
}

.info-card p {
    font-size: 14px;
    color: var(--color-text-muted);
    margin-bottom: 16px;
}

.connection-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--color-text-muted);
}

.status-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
}

.status-indicator.pending {
    background: #f59e0b;
}

.status-indicator.connected {
    background: #10b981;
}

/* ========================================
   Mobile Cards
   ======================================== */

.doctor-cards-mobile,
.patient-cards-mobile {
    display: none;
}

/* ========================================
   Inicio Page Content
   ======================================== */

.inicio-page-content {
    /* Override placeholder styles */
}

/* ========================================
   Responsive
   ======================================== */

@media (max-width: 1200px) {
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 1024px) {
    .summary-cards {
        grid-template-columns: 1fr;
    }

    .filters-bar {
        flex-direction: column;
    }

    .search-input {
        min-width: 100%;
    }

    .transaction-item {
        flex-wrap: wrap;
        gap: 12px;
    }

    .transaction-amount-section,
    .transaction-status-section {
        align-items: flex-start;
    }

    .dashboard-grid,
    .goals-grid,
    .settings-grid {
        grid-template-columns: 1fr;
    }

    .data-table-section {
        display: none;
    }

    .doctor-cards-mobile,
    .patient-cards-mobile {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
}

@media (max-width: 768px) {
    .sidebar {
        display: none;
    }

    .main-content {
        margin-left: 0;
        padding: 20px;
    }

    .page-header {
        flex-direction: column;
        gap: 16px;
    }

    .header-actions {
        width: 100%;
    }

    .header-actions .btn {
        flex: 1;
        justify-content: center;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }
}

/* ========================================
   Mobile Doctor/Patient Cards
   ======================================== */

.doctor-card-mobile,
.patient-card {
    background: white;
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
}

.doctor-card-header,
.patient-card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
}

.doctor-card-stats,
.patient-card-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
}

.mini-stat {
    text-align: center;
    padding: 12px;
    background: #f8fafc;
    border-radius: var(--radius-md);
}

.mini-stat-value {
    display: block;
    font-size: 16px;
    font-weight: 700;
    color: var(--color-text);
}

.mini-stat-label {
    display: block;
    font-size: 11px;
    color: var(--color-text-muted);
    margin-top: 2px;
}

.patient-email {
    font-size: 13px;
    color: var(--color-text-muted);
}

.pending-badge-sm {
    margin-left: auto;
    padding: 4px 8px;
    background: #fef2f2;
    color: #ef4444;
    border-radius: var(--radius-sm);
    font-size: 12px;
    font-weight: 600;
}